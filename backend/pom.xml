                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>3.4.1</version>
                <configuration>
                    <pluginManagementExcludes>
                        <pluginManagementExclude>org.eclipse.m2e</pluginManagementExclude>
                    </pluginManagementExcludes>
